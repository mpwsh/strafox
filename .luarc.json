{
  "$schema": "https://raw.githubusercontent.com/sumneko/vscode-lua/master/setting/schema.json",
  "diagnostics": {
    "disable": [
      "undefined-global",
      "lowercase-global",
      "unused-local",
      "trailing-space",
      "no-unknown",
      "inject-field",
      "param-type-mismatch",
      "cast-type-mismatch",
      "assign-type-mismatch",
      "missing-return",
      "missing-return-value",
      "return-type-mismatch"
    ]
  },
  "workspace": {
    "library": ["${3rd}/love2d/library"],
    "checkThirdParty": false,
    "ignoreDir": ["moonshine"],
    "useGitIgnore": true
  },
  "runtime": {
    "version": "LuaJIT",
    "path": ["?.lua", "?/init.lua"],
    "pathStrict": false
  },
  "type": {
    "weakNilable": true,
    "weakUnionCheck": true
  }
}
